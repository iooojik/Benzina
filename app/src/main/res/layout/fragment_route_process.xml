<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/bottom_navigation"
    tools:context="com.kirovcompany.bensina.ui.RouteProcess">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layout_stats"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/fab_margin"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/blocks_margin"
                    android:background="@color/colorSecondary"
                    android:orientation="vertical"
                    android:padding="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/elements_margin"
                        android:text="@string/speed"
                        android:textSize="@dimen/blockNameTextSize" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/speed_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/elements_margin"
                            android:layout_weight="1"
                            android:text="@string/_0_00"
                            android:fontFamily="@font/eczar_regular"
                            android:textColor="@color/blockTextColor"
                            android:textSize="@dimen/blockTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/kmh"
                            android:textSize="@dimen/blockTextSize" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/blocks_margin"
                    android:layout_weight="1"
                    android:background="@color/colorSecondary"
                    android:orientation="vertical"
                    android:padding="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/elements_margin"
                        android:text="@string/distance"
                        android:textSize="@dimen/blockNameTextSize" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/distance_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/elements_margin"
                            android:layout_weight="1"
                            android:text="@string/_0_00"
                            android:fontFamily="@font/eczar_regular"
                            android:textColor="@color/blockTextColor"
                            android:textSize="@dimen/blockTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/km"
                            android:textSize="@dimen/blockTextSize" />
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/blocks_margin"
                    android:orientation="vertical"
                    android:background="@color/colorSecondary"
                    android:padding="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/elements_margin"
                        android:text="@string/route_time"
                        android:textSize="@dimen/blockNameTextSize" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/timer_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/elements_margin"
                            android:layout_weight="1"
                            android:text="@string/_00_00_00"
                            android:fontFamily="@font/eczar_regular"
                            android:textColor="@color/blockTextColor"
                            android:textSize="@dimen/blockTextSize" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/blocks_margin"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@color/colorSecondary"
                    android:padding="@dimen/fab_margin">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/elements_margin"
                        android:text="@string/rate"
                        android:textSize="@dimen/blockNameTextSize" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/rate_text_view"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/elements_margin"
                            android:layout_weight="1"
                            android:text="@string/_0_00"
                            android:fontFamily="@font/eczar_regular"
                            android:textColor="@color/blockTextColor"
                            android:textSize="@dimen/blockTextSize" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/liter"
                            android:textSize="@dimen/blockTextSize" />
                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>



        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_margin="@dimen/fab_margin"
            android:background="@color/green" />

        <LinearLayout
            android:id="@+id/statistics_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


        </LinearLayout>

        <include layout="@layout/fuel_stats"/>

    </LinearLayout>



</androidx.core.widget.NestedScrollView>